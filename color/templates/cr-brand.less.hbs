//  General
//  ───────────────────────────────────

{{#each general as |color|}}
@cr-{{color.name}}:         {{color.hex}};
{{/each}}
{{#each colors as |color|}}


//  {{capitalize color.name}}
//  ───────────────────────────────────

@cr-{{color.name}}-list: {{join color.hex ', '}};

@cr-{{color.name}}-0: extract(@cr-{{color.name}}-list, 1);
@cr-{{color.name}}-1: extract(@cr-{{color.name}}-list, 2);
@cr-{{color.name}}-2: extract(@cr-{{color.name}}-list, 3);
@cr-{{color.name}}-3: extract(@cr-{{color.name}}-list, 4);
@cr-{{color.name}}-4: extract(@cr-{{color.name}}-list, 5);
@cr-{{color.name}}-5: extract(@cr-{{color.name}}-list, 6);
@cr-{{color.name}}-6: extract(@cr-{{color.name}}-list, 7);
@cr-{{color.name}}-7: extract(@cr-{{color.name}}-list, 8);
@cr-{{color.name}}-8: extract(@cr-{{color.name}}-list, 9);
@cr-{{color.name}}-9: extract(@cr-{{color.name}}-list, 10);
{{/each}}